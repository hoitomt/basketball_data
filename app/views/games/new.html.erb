<h1>New Game</h1>

<div class="row">
  <div class="col-sm-6">
    <%= simple_form_for(@game, html: { class: 'form' }) do |f| %>
      <%= f.input :date %>
      <%= f.input :away_team %>
      <%= f.input :home_team %>
      <%= f.input :description %>
      <%= f.button :submit, class: 'btn btn-success' %>
    <% end %>
  </div>
</div>
